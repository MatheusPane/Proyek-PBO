<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="admin.UpdateKursiController" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Perbarui Data Kursi" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TextField promptText="Masukkan ID Kursi" fx:id="idKursiField" />
    <TextField promptText="Masukkan Nomor Kursi Baru" fx:id="nomorKursiField" />
    <TextField promptText="Masukkan Status Baru" fx:id="statusField" />
    <Button text="Perbarui" onAction="#handlePerbarui" />
    <Button text="Kembali" onAction="#handleKembali" />
</VBox>
