<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Alert?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="admin.DeleteFilmController" spacing="20" padding="20">
    <Label text="Hapus Data Film" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <HBox spacing="10">
        <Label text="ID Film: "/>
        <TextField fx:id="idFilmField" promptText="Masukkan ID Film" />
    </HBox>

    <Button text="Hapus Film" onAction="#handleHapusFilm" style="-fx-padding: 10px 20px; -fx-font-size: 14px;"/>
    <Button text="Kembali" onAction="#handleKembali" style="-fx-padding: 10px 20px; -fx-font-size: 14px;"/>
    
    <HBox spacing="10" alignment="center">
        <Label fx:id="statusLabel"/>
    </HBox>
</VBox>
