<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="admin.AdminMenuController" spacing="15" alignment="CENTER" 
      style="-fx-background-color: linear-gradient(to bottom, #2E3B4E, #3B4D61); -fx-padding: 30; -fx-border-radius: 10;">
    
    <!-- Judul Menu -->
    <Label text="Menu Admin" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ffffff;" />

    <!-- Container untuk Tombol -->
    <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-border-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 5);">
        <Label text="Kelola Data Film" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2E3B4E;" />

        <!-- Tombol Film -->
        <Button text="Tambah Film" onAction="#handleTambahFilm" styleClass="menu-button" />
        <Button text="Lihat Data Film" onAction="#handleLihatDataFilm" styleClass="menu-button" />
        <Button text="Perbarui Data Film" onAction="#handlePerbaruiDataFilm" styleClass="menu-button" />
        <Button text="Hapus Data Film" onAction="#handleHapusDataFilm" styleClass="menu-button" />
        
        <Separator style="-fx-background-color: #cccccc;" />

        <Label text="Kelola Data Kursi" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2E3B4E;" />
        
        <!-- Tombol Kursi -->
        <Button text="Tambah Kursi" onAction="#handleTambahKursi" styleClass="menu-button" />
        <Button text="Lihat Data Kursi" onAction="#handleLihatDataKursi" styleClass="menu-button" />
        <Button text="Perbarui Data Kursi" onAction="#handlePerbaruiDataKursi" styleClass="menu-button" />
        <Button text="Hapus Data Kursi" onAction="#handleHapusDataKursi" styleClass="menu-button" />
    </VBox>
    
    <!-- Tombol Keluar -->
    <Button text="Keluar" onAction="#handleKeluar" style="-fx-background-color: #FF5555; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 10;" />
</VBox>
