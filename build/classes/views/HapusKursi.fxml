<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="admin.HapusKursiController" spacing="15" alignment="CENTER" style="-fx-padding: 30; -fx-background-color: #fdfdfd; -fx-border-color: #b0bec5; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10;">
    <!-- Title Label -->
    <Label text="Hapus Data Kursi" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #f57c00;" />

    <!-- Input ID Kursi -->
    <TextField fx:id="idKursiField" promptText="Masukkan ID Kursi"
               style="-fx-font-size: 14px; -fx-padding: 8px; -fx-background-radius: 5; -fx-border-color: #90a4ae; -fx-border-width: 1; -fx-border-radius: 5;" />

    <!-- Buttons Section -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="Hapus" onAction="#handleHapus"
                style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8px 15px; -fx-background-radius: 5;" />
        <Button text="Kembali" onAction="#handleKembali"
                style="-fx-background-color: #607d8b; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8px 15px; -fx-background-radius: 5;" />
    </HBox>
</VBox>
