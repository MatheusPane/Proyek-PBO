<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="admin.LihatFilmController" 
      style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #4ca1af); -fx-padding: 30;">
    
    <!-- Header -->
    <Label text="Daftar Film" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" />

    <!-- TableView -->
    <TableView fx:id="filmTable" prefWidth="700" prefHeight="400" style="-fx-background-radius: 10; -fx-background-color: white; -fx-border-color: #CCCCCC; -fx-border-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 5);">
        <columns>
            <TableColumn fx:id="judulColumn" text="Judul Film" prefWidth="200" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="genreColumn" text="Genre" prefWidth="150" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="tahunColumn" text="Tahun Rilis" prefWidth="100" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="durasiColumn" text="Durasi (Menit)" prefWidth="100" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="sutradaraColumn" text="Sutradara" prefWidth="150" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="jadwalColumn" text="Jadwal Tayang" prefWidth="150" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="hargaColumn" text="Harga Tiket (Rp)" prefWidth="120" style="-fx-alignment: CENTER;"/>
        </columns>
    </TableView>

    <!-- Button -->
    <Button text="Kembali" onAction="#handleKembali" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 8 16;"/>
</VBox>
