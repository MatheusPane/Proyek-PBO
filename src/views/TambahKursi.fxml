<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="admin.TambahKursiController" spacing="20" alignment="CENTER" style="-fx-padding: 30; -fx-background-color: #f4f4f4; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, #888, 10, 0.5, 0, 0);">
    <Label text="Tambah Kursi" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" />

    <ComboBox fx:id="judulFilmComboBox" promptText="Pilih Judul Film" style="-fx-font-size: 14px; -fx-pref-width: 250px; -fx-background-color: white; -fx-background-radius: 5px; -fx-border-color: #ccc; -fx-border-radius: 5px;" />

    <HBox spacing="15" alignment="CENTER">
        <Button text="Simpan 50 Kursi" onAction="#handleSimpan" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5px; -fx-padding: 10 20;" />
        <Button text="Kembali" onAction="#handleKembali" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 5px; -fx-padding: 10 20;" />
    </HBox>
</VBox>
