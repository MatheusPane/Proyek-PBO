<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="admin.UpdateFilmController" style="-fx-background-color: linear-gradient(to bottom, #2b5876, #4e4376); -fx-padding: 20;">
    <Label text="Perbarui Data Film" style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" />

    <GridPane alignment="CENTER" hgap="10" vgap="10" style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.3), 10, 0, 0, 10);">
        <Label text="ID Film:" style="-fx-font-size: 14px; -fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="idFilmField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Judul Baru:" style="-fx-font-size: 14px; -fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="judulField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Genre Baru:" style="-fx-font-size: 14px; -fx-font-weight: bold;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="genreField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Durasi Baru (menit):" style="-fx-font-size: 14px; -fx-font-weight: bold;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="durasiField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Sutradara Baru:" style="-fx-font-size: 14px; -fx-font-weight: bold;" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="sutradaraField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Jadwal Baru:" style="-fx-font-size: 14px; -fx-font-weight: bold;" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="jadwalField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Harga Baru (Rp):" style="-fx-font-size: 14px; -fx-font-weight: bold;" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="hargaField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <Button text="Perbarui" onAction="#handleUpdateFilm" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
        <Button text="Kembali" onAction="#handleKembali" style="-fx-background-color: #FF5733; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    </GridPane>
</VBox>
